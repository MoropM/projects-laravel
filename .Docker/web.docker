FROM 3515210023/l-d:v0.1
MAINTAINER ivanRios joserios9605@outlook.com

COPY . /var/www/html/projects-laravel
COPY .Docker/vhost.conf /etc/apache2/sites-available/000-default.conf
RUN apt-get update && apt-get install -y libmcrypt-dev mysql-client \
    && docker-php-ext-install pdo pdo_mysql
RUN chown -R www-data:www-data /var/www/html/projects-laravel \
    && a2enmod rewrite
RUN cd . /var/www/html/projects-laravel/test && php artisan migrate

WORKDIR /var/www/html

